@page "{id:int?}"
@model BellTestApp.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit User</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="User.ID" />
                        <div class="form-group mb-2">
                            <label asp-for="User.FirstName" class="control-label fw-bold"></label>
                            <input asp-for="User.FirstName" class="form-control" />
                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="User.LastName" class="control-label fw-bold"></label>
                            <input asp-for="User.LastName" class="form-control" />
                            <span asp-validation-for="User.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="User.Email" class="control-label fw-bold"></label>
                            <input asp-for="User.Email" class="form-control" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="User.Phone" class="control-label fw-bold"></label>
                            <input asp-for="User.Phone" class="form-control" />
                            <span asp-validation-for="User.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="User.Address" class="control-label fw-bold"></label>
                            <input asp-for="User.Address" class="form-control" />
                            <span asp-validation-for="User.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="User.DOB" class="control-label fw-bold"></label>
                            <input asp-for="User.DOB" class="form-control" />
                            <span asp-validation-for="User.DOB" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
